all:  screenTest

screenTest:  main.o board.o box.o text.o button.o counter.o
	g++ -o screenTest -g main.o board.o box.o text.o button.o counter.o -lSDL -lSDL_image -lSDL_ttf

main.o:  main.cpp board.h
	g++ -c -g main.cpp

board.o:  board.cpp board.h box.h text.h button.h counter.h
	g++ -c -g board.cpp

box.o:  box.cpp box.h
	g++ -c -g box.cpp -std=c++0x

text.o:  text.cpp text.h
	g++ -c -g text.cpp

button.o:  button.cpp button.h
	g++ -c -g button.cpp

counter.o:  counter.cpp counter.h
	g++ -c -g counter.cpp

clean:
	rm -f core* screenTest *.o
