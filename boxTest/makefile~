all:  boxTest

boxTest:  main.o text.o box.o button.o
	g++ -o boxTest -g main.o text.o box.o button.o -lSDL -lSDL_image -lSDL_ttf

main.o:  main.cpp text.h
	g++ -c -g main.cpp

text.o:  text.cpp text.h
	g++ -c -g text.cpp

box.o:  box.cpp box.h
	g++ -c -g box.cpp -std=c++0x

clean:
	rm -f core* boxTest *.o
