all:  terrainTest

terrainTest:  main.o terrain.o item.o item.cpp item.h
	g++ -o terrainTest main.o terrain.o -lSDL -lSDL_image

main.o:  terrain.h main.cpp
	g++ -c main.cpp

terrain.o:  terrain.h item.h terrain.cpp
	g++ -c terrain.cpp

item.o:  item.h item.cpp
	g++ -c item.cpp

clean:
	rm -f core* *.o
